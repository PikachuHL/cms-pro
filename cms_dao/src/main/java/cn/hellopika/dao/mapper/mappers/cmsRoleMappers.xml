<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hellopika.dao.mapper.CmsRoleMapper">

    <!-- 新增的 列 -->
    <sql id="column">
        <if test="name!=null and name!=''">
            name,
        </if>

        <if test="priority!=null">
            priority,
        </if>

        <if test="all!=null">
            is_all,
        </if>

        <if test="status!=null">
            status,
        </if>
        create_time
    </sql>

    <!-- 新增的 值 -->
    <sql id="value">
        <if test="name!=null and name!=''">
            #{name},
        </if>

        <if test="priority!=null">
            #{priority},
        </if>

        <if test="all!=null">
            #{all},
        </if>

        <if test="status!=null">
            #{status},
        </if>
        #{createTime}
    </sql>

    <sql id="updateColumn">
        update_time = #{updateTime},
        <if test="parentId != null">
            parent_id = #{parentId},
        </if>

        <if test="icon != null and icon != ''">
            icon = #{icon},
        </if>

        <if test="menu != null">
            is_menu = #{menu},
        </if>

        <if test="action!=null and action != ''">
            action = #{action},
        </if>

        <if test="url != null and url != ''">
            url = #{url},
        </if>
        name = #{name},
        priority = #{priority}
    </sql>

    <!-- 查询的所有列 -->
    <sql id="allColumn">
        id, parent_id, is_menu, icon, name, action, url, priority
    </sql>

    <resultMap id="baseMap" type="cn.hellopika.dao.entity.CmsPermissionEntity">
        <id column="id" property="id"/>
        <result column="parent_id" property="parentId"/>
        <result column="is_menu" property="menu"/>
        <result column="icon" property="icon"/>
        <result column="name" property="name"/>
        <result column="action" property="action"/>
        <result column="url" property="url"/>
        <result column="priority" property="priority"/>
    </resultMap>


    <insert id="save">
        <!--获取 新增记录的id, 并且返给 entity-->
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
        insert into cms_role (<include refid="column"/>) values (<include refid="value"/>)
    </insert>

    <update id="update">
        update cms_permission set
        <include refid="updateColumn"/>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from cms_permission where id=#{id}
    </delete>

    <select id="selectAll" resultMap="baseMap">
        select
        <include refid="allColumn"/>
        from cms_permission order by parent_id asc
    </select>

    <select id="selectById" resultMap="baseMap">
        select
        <include refid="allColumn"/>
        from cms_permission where id=#{id}
    </select>

</mapper>