<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hellopika.dao.mapper.CmsRoleMapper">

    <!-- 新增的 列 -->
    <sql id="column">
        <if test="name!=null and name!=''">
            name,
        </if>

        <if test="priority!=null">
            priority,
        </if>

        <if test="all!=null">
            is_all,
        </if>

        <if test="status!=null">
            status,
        </if>
        create_time
    </sql>

    <!-- 新增的 值 -->
    <sql id="value">
        <if test="name!=null and name!=''">
            #{name},
        </if>

        <if test="priority!=null">
            #{priority},
        </if>

        <if test="all!=null">
            #{all},
        </if>

        <if test="status!=null">
            #{status},
        </if>
        #{createTime}
    </sql>

    <sql id="updateColumn">
        update_time = #{updateTime},
        <if test="name!=null and name!=''">
            name = #{name},
        </if>

        <if test="priority!=null">
            priority = #{priority},
        </if>

        <if test="all!=null">
            is_all = #{all},
        </if>

        <if test="status!=null">
            status = #{status}
        </if>
    </sql>

    <!-- 查询的所有列 -->
    <sql id="allColumn">
        id, name, is_all, priority, status
    </sql>

    <resultMap id="baseMap" type="cn.hellopika.dao.entity.CmsRoleEntity">
        <id column="id" property="id"/>
        <result column="is_all" property="all"/>
        <result column="name" property="name"/>
        <result column="priority" property="priority"/>
        <result column="status" property="status"/>
    </resultMap>


    <insert id="save">
        <!--获取 新增记录的id, 并且返给 entity-->
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
        insert into cms_role (<include refid="column"/>) values (<include refid="value"/>)
    </insert>

    <update id="update">
        update cms_role set
        <include refid="updateColumn"/>
        where id=#{id}
    </update>

    <delete id="deleteById">
        delete from cms_role where id=#{id}
    </delete>

    <select id="getPage" parameterType="cn.hellopika.dao.entity.CmsRoleEntity" resultMap="baseMap">
        select
        <include refid="allColumn"/>
        from cms_role
        <where>
            <if test="name!=null and name!=''">
                name like concat('%', #{name}, '%')
            </if>
        </where>
        order by priority asc
    </select>

    <select id="selectById" resultMap="baseMap">
        select
        <include refid="allColumn"/>
        from cms_role where id=#{id}
    </select>

</mapper>