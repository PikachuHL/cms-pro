<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="cn.hellopika.dao.mapper.CmsUserMapper">
    <sql id="baseColumns">
        id,
        username,
        status
    </sql>

    <resultMap id="baseResultMap" type="cn.hellopika.dao.entity.CmsUserEntity">
        <id property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="status" column="status"/>
    </resultMap>


    <select id="findByUsername" resultMap="baseResultMap">
        select <include refid="baseColumns"/> from cms_user where username=#{username} and deleted = 1
    </select>

</mapper>